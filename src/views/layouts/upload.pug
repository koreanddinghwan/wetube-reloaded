extends default.pug 

block content 
    div
        video#preview
        button#actionBtn start recording

    #upload 
        if errormessage 
            span=errormessage

        form(method="POST" enctype="multipart/form-data")
            label(for="video") Video file
            input(type="file" accept="video/*", required, id="video" name="video")
            label(for="thumb") Thumbnail file
            input(type="file" accept="image/*", required, id="thumb" name="thumb")
            input(name="title" type="text" placeholder="title" required maxlength= 20)
            input(name="description" type="text" placeholder="description" required minlength=10)
            input(name="hashtags" type="text" placeholder="hashtags" required)
            input(type="submit")


block scripts
    script(src="/static/js/recorder.js") 