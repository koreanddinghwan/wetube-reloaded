extends default.pug 


block content 
    #videos 
        h1=video.title
        video(src="/" + video.fileUrl, controls)
        div 
            small=video.meta.views
            small=video.meta.rating
        h3= video.description
        p=video.hashtags
        small=video.creationAt

        div
            small Uploaded by 
                a(href=`/user/${video.owner._id}`)=video.owner.username
        

        if String(video.owner._id) === String(loggedInUser._id)
            #video_control
            hr
            a(href=`${video.id}/edit`) Edit this video
            br
            a(href=`${video.id}/delete`) Delete this video